<p style="color: green"><%= notice %></p>

<h2 align="center"><%= @category.name.capitalize %></h2>
<%= render 'categories/cat_form',articles: @category.articles.includes(:user,:rich_text_body) %>

<% if current_user&.admin? %>


  <div align="center">
    <%= link_to "Back to categories", categories_path, class:"btn btn-primary" %>
  </div>

  <br>

  <div align="center">
    <div class="btn-group" >
        <%= link_to "Edit this category", edit_category_path(@category) ,class:"btn btn-warning"%> |
        <%= button_to "Destroy this category", @category, method: :delete, class:"btn btn-danger" %>
    </div>
  </div>

<% else %>

  <div align="center">
    <%= link_to "Back to categories", categories_path, class:"btn btn-primary" %>
  </div>
  <br>

<% end %>
