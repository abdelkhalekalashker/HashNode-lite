<h4 class="text-center"><%= pluralize(articles.count, "Article") %></h4>
<div class="container">
  <table class="table table-dark table-striped text-center me-auto">
    <thead>
      <tr align="center">
        <th>Title</th>
        <th>Body</th>
        <th>User</th>
        <th>Category</th>
      </tr>
    </thead>
    <tbody>
      <% articles.each do |article| %>
        <tr align="center">
          <td><%= link_to article.title, article %></td>
          <td><%= article.body.to_plain_text.truncate(70) %></td>
          <td><%= link_to article.user.full_name, article.user %></td>
          <td><%= link_to article.category.name, article.category %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="pagination">
  <%= will_paginate @articles %>
</div>


