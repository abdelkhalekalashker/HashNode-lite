<div class="container mt-4">
  <div class="row">
    <div class="col-1">
    </div>

    <div class="col-4">
        <%= image_tag(@user.avatar , style:"border-radius:100%; width:130px;float:left;") if @user.avatar.attached? %>
    </div>
    <div class="col-7" ></div>
  </div>

  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-10" style="overflow:hidden;">

        <h1><%= @user.full_name %></h1>
        <p>Articles total views: <%= pluralize(@user.views , "view") %></p>

    </div>
    <div class="col-1" ></div>

<br>
  <div class="row">

    <div class="col-1">
    </div>

    <div class="col-10">
          <%= render 'users/info',user:@user %>

        <% @articles.each do |article|%>
          <div class="card mt-3">
            <div class="card-body">
                <h4 class="card-title"><%= link_to article.title, article %></h4>
                <p class="card-text"><%= time_ago_in_words(article.created_at)%> ago</p>
                <p class="card-text"><%= article.body.to_plain_text.truncate_words(9)%>
         </div>
            </div>
        <% end %>
    </div>

    <div class="col-1">
    </div>
  </div>
</div>
